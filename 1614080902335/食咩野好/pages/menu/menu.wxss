/* pages/menu/menu.wxss */

.item-wrapper {
  width: 100%;
  overflow: hidden;
}

.item-list {
  position: relative;
  width: 100%;
  height: 138rpx;
  margin-left: 20rpx;
}

.item-info, .item-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}

.item-info {
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

.item-list:first-child {
  border-top: 1px solid #ccc;
}

.item-oper {
  display: flex;
  justify-content: flex-end;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}

.info-wrapper {
  margin-left: 20rpx;
  width: 588rpx;
}

.info-desc {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10rpx;
}

.info-desc .name {
  font-size: 40rpx;
  color: black;
  font-weight: 500;
  padding-left: 10px;
}
