@import '../index/icon.wxss';
page {
  background-color: #2a8cef;
  background:-webkit-gradient(linear, 0 0, 0 bottom, from(#00FFFF), to(#2a8cef));
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: stretch;
  font-size: 14px;
}
 
.box {
  display: block;
  margin: 10px;
}
 
.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-wrap: wrap;
}
 
.flex-item {
  flex-flow: nowrap;
  flex-grow: 1;
  flex-shrink: 1;
  width: 14.2%;
}
 
.item-content {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: #00FFFF;
  height: 2rem;
  line-height: 2rem;
  color: #fff;
}
 
.bk-color-day {
  background-color: #2a8cef;
}
 
.item-content-current-day {
  flex-grow: 2;
}
